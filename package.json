{
    "name": "coin-mena-test-project",
    "version": "1.0.0",
    "description": "test project for the React Developer Task",
    "main": "index.js",
    "scripts": {
        "prepare": "husky install",
        "build": "./node_modules/.bin/webpack -p --config ./webpack.app.config.js --mode production",
        "clean": "shx rm -rf dist/",
        "clean:modules": "shx rm -rf node_modules",
        "start-app": "webpack-dev-server --config ./webpack.app.config.js --mode development",
        "start-app-test": "webpack-dev-server --config ./webpack.test.config.js --mode development",
        "test:open-app": "start-server-and-test start-app-test 3001 'cypress open --config-file cypress/cypress.json'",
        "test:run-app": "start-server-and-test start-app-test 3001 'cypress run --config-file cypress/cypress.json'",
        "test:open-ct": "cypress open-ct",
        "test:run-ct": "cypress run-ct",
        "test": "npm run test:run-app && npm run test:run-ct",
        "tsc:check": "tsc -p ./tsconfig.json && tsc -p ./cypress/tsconfig.json",
        "eslint:check": "eslint src/**/*.{ts,tsx}",
        "eslint:fix": "eslint src/**/*.{ts,tsx} --fix",
        "prettier:check": "prettier --check \"{src,cypress}/**/*.{ts,tsx,css,scss}\"",
        "prettier:fix": "prettier --check \"{src,cypress}/**/*.{ts,tsx,css,scss}\" --write",
        "stylelint:check": "stylelint src/**/*.{css,scss}",
        "stylelint:fix": "stylelint src/**/*.{css,scss} --fix",
        "all:check": "npm run tsc:check && npm run eslint:check && npm run prettier:check && npm run stylelint:check",
        "all:fix": "npm run eslint:fix && npm run prettier:fix && npm run stylelint:fix"
    },
    "devDependencies": {
        "@cypress/react": "^5.10.1",
        "@cypress/webpack-dev-server": "^1.7.0",
        "@types/node": "^16.11.9",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "copy-webpack-plugin": "^6.4.1",
        "css-loader": "^1.0.0",
        "cypress": "^8.3.1",
        "cypress-real-events": "^1.5.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-local": "^1.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "3.2.0",
        "husky": "^7.0.4",
        "js-cookie": "^3.0.1",
        "lint-staged": "^9.5.0",
        "mini-css-extract-plugin": "^0.4.1",
        "node-sass": "^4.14.1",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.1",
        "redux-mock-store": "^1.5.4",
        "sass-loader": "^10.2.0",
        "shx": "0.3.2",
        "start-server-and-test": "^1.14.0",
        "stylelint": "^13.13.1",
        "stylelint-config-recommended": "^5.0.0",
        "stylelint-declaration-use-variable": "^1.7.3",
        "stylelint-scss": "^3.21.0",
        "ts-loader": "8.2.0",
        "typescript": "^4.4.3",
        "url-loader": "^4.1.1",
        "webpack-blocks": "^2.1.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "3.11.1"
    },
    "dependencies": {
        "@types/react": "^17.0.31",
        "@types/react-dom": "^17.0.10",
        "@types/react-router-dom": "^5.3.1",
        "@types/redux-logger": "^3.0.9",
        "@types/redux-mock-store": "1.0.3",
        "classnames": "^2.3.1",
        "github-trends-api": "^1.0.1",
        "react": "^17.0.2",
        "react-bootstrap": "^2.1.1",
        "react-cookie": "^4.1.1",
        "react-dom": "^17.0.2",
        "react-infinite-scroll-hook": "^4.0.1",
        "react-intl": "^5.20.10",
        "react-redux": "^7.2.4",
        "react-router-dom": "^5.3.0",
        "react-toastify": "^8.1.0",
        "redux": "^4.1.1",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
